pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Rogan46/demo-jenkins.git'
            }
        }
        stage('Show Changed Files and Content') {
            steps {
                script {
                    sh '''
                    echo "Modified Files:"
                    git diff --name-only HEAD~1 HEAD
                    echo "Content of modified files:"
                    git diff HEAD~1 HEAD
                    '''
                }
            }
        }
    }
}
