pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
        stage('Show Changed Files and Content') {
            steps {
                script {
                    sh '''
                    echo "Changed files:"
                    git diff --name-only HEAD^ HEAD

                    echo "Showing changes:"
                    git diff HEAD^ HEAD
                    '''
                }
            }
        }
    }
}
